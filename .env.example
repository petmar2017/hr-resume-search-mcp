# === APPLICATION ===
APP_NAME=hr-resume-search-mcp
APP_VERSION=1.0.0
ENVIRONMENT=development  # development|staging|production
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=dual  # console|json|dual

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# === DATABASE ===
DATABASE_URL=postgresql://staging_user:staging_password_change_me@localhost:5432/hr_resume_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# === REDIS ===
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=hr_resume:
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=50

# === AUTHENTICATION ===
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# === CLAUDE API ===
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3
CLAUDE_TIMEOUT=60
CLAUDE_MAX_RETRIES=3
CLAUDE_RETRY_DELAY=1

# === FILE UPLOAD ===
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx
UPLOAD_DIRECTORY=./uploads
UPLOAD_SECURE_MODE=true
UPLOAD_VIRUS_SCAN=false

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STRATEGY=sliding_window

# === MONITORING ===
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000
LOKI_URL=http://localhost:3100
TEMPO_URL=http://localhost:3200

# === MCP SERVER ===
MCP_ENABLED=true
MCP_LOG_FILE=
MCP_DEBUG=false

# === PERFORMANCE ===
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE_MB=100
RESPONSE_COMPRESSION=true
CACHE_ENABLED=true

# === SECURITY ===
SECURE_COOKIES=true
CSRF_PROTECTION=true
SQL_INJECTION_PROTECTION=true
XSS_PROTECTION=true

# === EXTERNAL SERVICES ===
ELASTICSEARCH_URL=http://localhost:9200
KAFKA_BROKERS=localhost:9092
S3_BUCKET_NAME=hr-resumes
AWS_REGION=us-east-1

# === TESTING ===
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_MODE=false